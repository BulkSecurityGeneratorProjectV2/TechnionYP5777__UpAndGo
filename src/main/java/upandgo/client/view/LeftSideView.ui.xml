<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:v="urn:import:upandgo.client.view"
             xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll">
	
	<ui:style>
		.danger {
            background-color: #fcf2f2;
            border-color: #dFb5b4;
        }

        .margin-fix {
            margin-top: 0 !important;
        }

        .margin {
            margin: 2px;
        }
        .smaller-button{
			    padding: 1px 3px;


		}
		.tall{
			height: 80px;
		}
	]
	</ui:style>
		

	<g:HTMLPanel>
		<b:Button addStyleNames="{style.smaller-button}" type="WARNING" dataToggle="COLLAPSE" dataTarget="#collapse">
            לוח מבחנים
        </b:Button>
        <b.html:ClearFix addStyleNames="{style.margin}"/>
         <b:PanelCollapse b:id="collapse">
      <b:PanelBody>
                           <m:ScrollPanel addStyleNames="{style.tall}" ui:field="examsBar">
                          </m:ScrollPanel>
        </b:PanelBody>
    </b:PanelCollapse>
        <v:SchedulerView></v:SchedulerView>
	</g:HTMLPanel>
	
</ui:UiBinder> 